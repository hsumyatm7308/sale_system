<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>

<BorderPane fx:id="root" minHeight="400.0" minWidth="500.0" stylesheets="@../../css/admin.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.salesystem.adminDashBoardController">
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="menuPane" maxWidth="300.0" minWidth="100.0" spacing="5.0">
               <children>
                  <StackPane maxHeight="150.0" maxWidth="300.0" minHeight="100.0" minWidth="100.0" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fx:id="userImage" fitHeight="100.0" fitWidth="200.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER" />
                        <Circle fill="DODGERBLUE" radius="50.0" stroke="BLACK" strokeLineCap="ROUND" strokeLineJoin="BEVEL" strokeType="OUTSIDE" styleClass="image-circle" />
                     </children>
                  </StackPane>
                  <Label fx:id="userNameLbl" alignment="CENTER" maxWidth="300.0" minWidth="100.0" text="Label" wrapText="true" />
                  <Line endX="100.0" startX="-100.0" />
                  <Region maxHeight="100.0" minHeight="0.0" VBox.vgrow="ALWAYS" />
                  <Button fx:id="dashBoardBtn" maxWidth="300.0" minWidth="100.0" mnemonicParsing="false" text="DashBoard">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="categoryBtn" maxWidth="300.0" minWidth="100.0" mnemonicParsing="false" text="Categories">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="productBtn" maxWidth="300.0" minWidth="100.0" mnemonicParsing="false" text="Products">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="userBtn" maxWidth="300.0" minWidth="100.0" mnemonicParsing="false" text="Users">
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </Button>
                  <Region maxWidth="300.0" minHeight="0.0" minWidth="100.0" VBox.vgrow="ALWAYS" />
                  <Button fx:id="settingBtn" maxWidth="300.0" minWidth="100.0" mnemonicParsing="false" text="Setting" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="TOP_RIGHT" maxHeight="30.0" minHeight="0.0" minWidth="0.0">
                     <children>
                        <Button fx:id="miniBtn" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" />
                        <Button fx:id="sizeBtn" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" />
                        <Button fx:id="exitBtn" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" />
                     </children>
                  </HBox>
                  <ScrollPane fx:id="rootPane" vmax="0.0" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;"/>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
